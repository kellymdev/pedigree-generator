<%= form_for @cat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :title %>
  <%= f.collection_select(:title_id, Title.all.order(:name), :id, :name, { include_blank: true }) %>

  <%= f.label :registration_number %>
  <%= f.text_field :registration_number %>
  
  <%= f.label :gender %>
  <%= f.collection_select(:gender_id, Gender.all.order(:name), :id, :name) %>

  <%= f.label :breed %>
  <%= f.collection_select(:breed_id, Breed.all.order(:name), :id, :name, { include_blank: true }) %>

  <%= f.label :coat_colour %>
  <%= f.collection_select(:coat_colour_id, CoatColour.all.order(:name), :id, :name, { include_blank: true }) %>

  <%= f.label(:sire) %>
  <%= f.collection_select(:sire_id, current_user.cats.all.order(:name).select { |cat| cat.sire? }, :id, :name, { include_blank: true }) %>

  <%= f.label(:dam) %>
  <%= f.collection_select(:dam_id, current_user.cats.all.order(:name).select { |cat| cat.dam? }, :id, :name, { include_blank: true }) %>

  <%= f.submit "Save", class: "button" %>
<% end %>