<h2><%= @cat.name %></h2>
<p><%= @cat.registration_number %></p>
<p>Gender: <%= @cat.gender.name %></p>

<% if @cat.breed %>
  <p>Breed: <%= @cat.breed.name %></p>
<% end %>

<% if @cat.coat_colour %>
  <p>Colour: <%= @cat.coat_colour.name %></p>
<% end %>

<h3>Parents</h3>

<% if @cat.sire %>
  <p>Sire: <%= link_to(@cat.sire.name, cat_path(@cat.sire)) %> (<%= @cat.sire.coat_colour.name if @cat.sire.coat_colour %> <%= @cat.sire.breed.name if @cat.sire.breed %>)</p>
<% end %>

<% if @cat.dam %>
  <p>Dam: <%= link_to(@cat.dam.name, cat_path(@cat.dam)) %> (<%= @cat.dam.coat_colour.name if @cat.dam.coat_colour %> <%= @cat.dam.breed.name if @cat.dam.breed %>)</p>
<% end %>

<h3>Pedigree</h3>

<%= render partial: "pedigree" %>

<% if !@cat.kittens.empty? || !@cat.offspring.empty? %>
  <h3>Progeny</h3>
<% end %>

<ul>
  <% @cat.kittens.each do |kitten| %>
    <li><%= link_to(kitten.name, cat_path(kitten)) %></li>
  <% end %>

  <% @cat.offspring.each do |kitten| %>
    <li><%= link_to(kitten.name, cat_path(kitten)) %></li>
  <% end %>
</ul>

<%= link_to("Edit cat", edit_cat_path(@cat)) %>
<%= link_to("Back to cats", cats_path) %>
